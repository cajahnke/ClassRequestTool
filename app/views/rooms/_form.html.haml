= semantic_form_for(@room) do |f|
  = f.inputs
  = f.input :repositories, :as => :check_boxes, :label => 'Libraries/Archives Allowed in this Room'
  %br/
  = f.input :item_attributes, :as => :check_boxes, :label => 'Classroom Technologies Available'
  = f.actions do
    = f.action :submit, :as => :button, :button_html => {:class => 'btn btn-primary'}
