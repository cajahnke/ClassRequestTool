= semantic_form_for(note) do |f|
  = f.input :note_text, :label => "Add a Note: ", :input_html => { :rows => 5, :columns => 250 }
  = f.hidden_field :course_id, :value => course.id
  = f.hidden_field :user_id, :value => current_user.id
  - if current_user.staff? || current_user.can_admin?
    = f.input :staff_comment, :label => "Staff only? (no email sent to patron) ", :input_html => { :checked => true }
  = f.actions do
    = f.action :submit, :as => :button, :button_html => {:class => 'btn btn-primary', :disabled => true}, :label => 'Post'
