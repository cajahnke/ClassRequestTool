<% unless notes.nil? || notes.empty? %>
  <% notes.each do |note| %>
    <p>
	  <%= note.note_text %> recorded by: <%= note.user.full_name unless note.user.nil? %>(<%= note.user.user_type unless note.user.nil? %>) on: <%= note.created_at.strftime(DATETIME_AT_FORMAT) %>
	  <% if current_user.try(:staff?) || current_user.try(:admin?) || current_user.try(:superadmin?) %>
	    <br />
        <%= link_to "Edit", edit_note_path(note.id) %> | <%= link_to('Delete', note_path(note), :confirm => "Are you sure?", :method => :delete) %>
	  <% end %>	
    </p>
  <% end %>
<% end %>
