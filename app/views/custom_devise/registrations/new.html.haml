%h3 Create a New Account
= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.input :username, :input_html => { :id => 'new_user_username' }
  = f.input :email
  = f.input :first_name
  = f.input :last_name
  = f.input :password, :input_html => { :id => 'new_user_password' }
  = f.input :password_confirmation
  = f.actions do
    = f.action :submit, :label => 'Sign Up', :button_html => {:class => 'btn btn-primary'}
